@inject TodoVM TodoVM

<div class="mt-3">
    <form class="row" @onsubmit="TodoVM.AddAsync">
        <div class="col">
            <InputText @bind-Value="TodoVM.TodoTitle" class="form-control" placeholder="Add a task!" autofocus />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>
            </button>
        </div>
    </form>
</div>