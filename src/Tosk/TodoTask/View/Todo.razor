@page "/"
@inject TodoVM TodoVM

<div class="d-flex flex-column p-3 vh-100">
    <header>
        <AppControlBar />
    </header>
    <main class="flex-grow-1 overflow-auto remove-scrollbar" style="outline: none">
        <TodoList />
    </main>
    <footer class="mt-3">
        @if (TodoVM.FilterBy == FilterBy.All)
        {
            <TodoForm />
        }
    </footer>
</div>
